/**
 * Depending on your platform, the user settings file is located here:
 *     Windows %APPDATA%\Code\User\settings.json
 *     macOS $HOME/Library/Application Support/Code/User/settings.json
 *     Linux $HOME/.config/Code/User/settings.json
 */
{
  /**
   * General
   */
  /* Editor config */
  "editor.fontSize": 18,
  "editor.linkedEditing": true,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "selection",
  "editor.inlineSuggest.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.unicodeHighlight.allowedLocales": {
    "zh-hans": true
  },
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": "on"
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "workbench.fontAliasing": "antialiased",
  "git.confirmSync": false,
  /* Terminal config */
  "terminal.integrated.inheritEnv": false,
  /* Apperance */
  "window.nativeTabs": true,
  "window.zoomLevel": 1,
  /* Files behavior */
  "explorer.fileNesting.enabled": true,
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "files.maxMemoryForLargeFilesMB": 16384,
  // Notes:
  // visual-studio-code-is-unable-to-watch-for-file-changes-in-this-large-workspace-error-enospc
  // https://code.visualstudio.com/docs/setup/linux
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.bloop": true,
    "**/.metals": true,
    "**/.ammonite": true,
    "**/*venv*": true
  },
  "search.exclude": {
    "**/.git": true,
    "**/.bloop": true,
    "**/.metals": true,
    // Node.js
    "**/.pnpm": true,
    "**/node_modules": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/yarn.lock": true,
    // Scala
    "**/target": true,
    // Python
    "**/*venv*": true
  },
  // "explorer.experimental.fileNesting.enabled": true,
  /* Task */
  // If the Tasks: Run Task command is slow,
  // disabling auto detect for task providers may help.
  "task.autoDetect": "off",

  /**
   * Language specific settings
   */
  /* markup language */
  "[markdown]": {
    "editor.indentSize": 2,
    "editor.renderWhitespace": "boundary",
    "editor.wordWrap": "off",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "files.trimTrailingWhitespace": false
  },
  "[yaml][json][jsonc]": {
    "editor.autoIndent": "advanced",
    "editor.indentSize": 2,
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[toml]": {
    "editor.indentSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[html][css]": {
    "editor.indentSize": 2,
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.proseWrap": "always",
  /* Haskell */
  "[haskell]": {
    "editor.fontFamily": "'Fira Code', 'Cascadia Code', monospace",
    "editor.fontLigatures": "'ss03', 'ss05', 'zero'",
    "editor.defaultFormatter": "haskell.haskell"
  },
  "haskell.formattingProvider": "stylish-haskell",
  /* C/Cpp */
  // C++ format style
  // http://clang.llvm.org/docs/ClangFormatStyleOptions.html
  "C_Cpp.clang_format_fallbackStyle": "{BasedOnStyle: LLVM, IndentWidth: 4, MaxEmptyLinesToKeep: 2}",
  /* Python */
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.inlayHints.functionReturnTypes": false,
  "python.analysis.inlayHints.variableTypes": false,
  "python.analysis.autoImportCompletions": true,
  /**
   * // Deprecated settings
   * "python.formatting.provider": "yapf",
   * "python.formatting.yapfArgs": [
   *   "--style",
   *   "{based_on_style: pep8, indent_width: 4, indent_dictionary_value: true, coalesce_brackets: false, split_before_dot: true}"
   * ],
   * "python.linting.mypyEnabled": true,
   * "python.linting.mypyArgs": [
   *   "--show-error-context",
   *   "--show-column-numbers",
   *   "--show-error-codes",
   *   "--no-pretty",
   *   "--no-color-output"
   * ],
   */
  "python.formatting.provider": "none",
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "autoDocstring.docstringFormat": "numpy",
  "notebook.lineNumbers": "on",
  "[python]": {
    "editor.rulers": [79, 120],
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.black-formatter"
    // "editor.codeActionsOnSave": {
    //   "source.organizeImports": true
    // }
  },
  // Standalone extenstions for Python
  // "black-formatter.args": ["--line-length", "79"],
  // "flake8.args": ["--ignore", "E203,E501,W503,W504"],
  "isort.args": ["--profile", "black"],
  "ruff.organizeImports": false,
  "ruff.args": ["--ignore", "C408"],
  "mypy-type-checker.args": [
    "--follow-imports=silent", // default
    "--ignore-missing-imports", // default
    "--no-pretty", // default
    "--show-column-numbers",
    "--show-error-context",
    "--show-error-codes"
  ],
  /* Rust */
  // "rust-analyzer.checkOnSave.command": "clippy",
  /* Scala */
  "[scala]": {
    "editor.indentSize": 2,
    "editor.rulers": [88],
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "metals.enableIndentOnPaste": true,
  "metals.enableSemanticHighlighting": true,
  "metals.serverProperties": ["-Dhttps.protocols=TLSv1.2,TLSv1.3"],
  "metals.showImplicitArguments": false,
  "metals.showImplicitConversionsAndClasses": true,
  /* Javascript/Typescript */
  "typescript.preferences.quoteStyle": "single",
  "typescript.suggest.completeFunctionCalls": true,
  "[javascript][typescript][javascriptreact][typescriptreact]": {
    "editor.indentSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "svelte.enable-ts-plugin": true,
  "[svelte]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "mdx.experimentalLanguageServer": true,
  /* SQL */
  "[sql]": {
    "editor.defaultFormatter": "inferrinizzard.prettier-sql-vscode"
  },
  "Prettier-SQL.commaPosition": "before",
  "Prettier-SQL.tabSizeOverride": 2,
  "Prettier-SQL.linesBetweenQueries": 2,
  "Prettier-SQL.SQLFlavourOverride": "postgresql",
  /* Others */
  "[mongodb]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "shellformat.flag": "-bn -ci -sr -kp",

  /**
   * Misc
   */
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true
  },
  "extensions.ignoreRecommendations": true,
  /* Telemetry */
  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false,
  "docker-explorer.enableTelemetry": false,
  "terraform.telemetry.enabled": false,
  "mdb.sendTelemetry": false
}
